<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Six Pines General Hospital</title>
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
	<body>

		@* HEADER *@
		<header class="header">
			<div class="wrapper container-fluid">
				<div class="row">

					@* SITE LOGO *@
					<div class="col-sm-3">
						<div class="header__logo">
							<a href="@Url.Action("Index", "Home")">
								<img class="header__logo" src="~/Images/mgh-logo.png" alt="Manitouwadge General Hospital Logo" class="nav__logo_image" />
							</a>
						</div>
					</div>

					@* SITE NAME *@
					<div class="col-sm-6 col-xs-8">
						<h2 class="header__site-name">
							Six Pines General Hospital
						</h2>
					</div>


					<div class="header__search-donate col-sm-3 col-xs-4">
						@* SEARCH *@
						<div class="row">
							<form class="header__search" method="post">
								<div class="input-group">
									<input type="text" class="form-control" placeholder="Search">
									<div class="input-group-btn">
										<button class="btn btn-default" type="submit">
											<i class="glyphicon glyphicon-search"></i>
										</button>
									</div>
								</div>
							</form>
						</div>

						@* DONATE *@
						<div class="row">
							<form class="header__donate" method="post">
								<button type="submit" class="header__btn-donate btn btn-default btn-md btn-block">Donate<span class="mobile-hide"> Today</span></button>
							</form>
						</div>

						@* HAMBURGER *@
						<div class="row">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#header-nav">
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
					</div>
				</div>
			</div>
		</header>

		@* HEADER NAVIGATION *@
		<nav class="nav__main-navbar mobile-hide">
			<div class="wrapper">
				<ul class="nav navbar-nav">
					<li>
						<form class="nav__search" method="post">
							<div class="input-group">
								<input type="text" class="form-control" placeholder="Search">
								<div class="input-group-btn">
									<button class="btn btn-default" type="submit">
										<i class="glyphicon glyphicon-search"></i>
									</button>
								</div>
							</div>
						</form>
					</li>
					<li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
					<li>@Html.ActionLink("About", "Index", "")</li>
					<li>@Html.ActionLink("Patients & Visitors", "Index", "")</li>
					<li>@Html.ActionLink("Our Services", "Index", "")</li>
					<li>@Html.ActionLink("News & Events", "Index", "")</li>
					<li>@Html.ActionLink("Fundraising", "Index", "")</li>
					<li>@Html.ActionLink("Contact", "Index", "")</li>
				</ul>
			</div>
		</nav>

		@* MAIN *@
		<div class="wrapper container-fluid">
			@RenderBody()
		</div>


		@* FOOTER NAVIGATION *@
		<nav class="footer__nav nav__main-navbar navbar">
			<div class="wrapper container-fluid">
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
						<li>@Html.ActionLink("About", "Index", "")</li>
						<li>@Html.ActionLink("Patients & Visitors", "Index", "")</li>
						<li>@Html.ActionLink("Our Services", "Index", "")</li>
						<li>@Html.ActionLink("News & Events", "Index", "")</li>
						<li>@Html.ActionLink("Fundraising", "Index", "")</li>
						<li>@Html.ActionLink("Contact", "Index", "")</li>
					</ul>
				</div>
			</div>
		</nav>

		@* FOOTER *@
		<footer class="footer">
			<div class="wrapper container-fluid">
				<div class="row">
					<div class="col-sm-4 footer__copyright">
						<h4 class="footer__title">&copy; Copyright @DateTime.Now.Year</h4>
						<p>Six Pines General Hospital.</p>
						<p>All rights reserved.</p>
					</div>
					<div class="col-sm-4 footer__extras">
						<h4 class="footer__title">Extra Resources</h4>
						<ul class="list-unstyled">
							<li>@Html.ActionLink("Notices & Policies", "Index", "")</li>
							<li>@Html.ActionLink("Quality Care", "Index", "")</li>
							<li>@Html.ActionLink("Careers", "Index", "")</li>
							<li>@Html.ActionLink("Volunteering", "Index", "")</li>
							<li>@Html.ActionLink("Testimonials", "Index", "")</li>
						</ul>
					</div>

					<div class="col-sm-4 footer__contact">
						<h4 class="footer__title">Contact Us</h4>
						<div class="address">
							<p>Six Pines General Hospital</p>
							<p>123 Health Care Road,</p>
							<p>Wayward Pines, ON.</p>
							<p>P4L 2C0</p>
							<p>Phone: (800) 555-2121</p>
						</div>
					</div>
				</div>
			</div>
		</footer>

		<script src="~/Scripts/jquery-1.10.2.min.js"></script>
		<script src="~/Scripts/bootstrap.min.js"></script>
	</body>
</html>