@model Feature1.Models.Volunteer

@{
	ViewBag.Title = "Volunteering";  @* <<<<<<<----------- USE WHATEVER VIEWBAG YOU NEED ---------------- *@
}
<div class="row">
	@* REQUIRED - DO NOT DELETE/CHANGE *@
	@Html.Partial("_Aside") @* REQUIRED - DO NOT DELETE/CHANGE *@
	<div class="secondary col-sm-10 col-xs-12">
		@* REQUIRED - DO NOT DELETE/CHANGE *@
		<main class="secondary-main">
			@* REQUIRED - DO NOT DELETE/CHANGE *@
			<div class="row">
				@* REQUIRED - DO NOT DELETE/CHANGE *@
				<div class="col-md-12">
					@* REQUIRED - DO NOT DELETE/CHANGE *@
					<h2 class="page-title">Register to Volunteer</h2> @* <<<<<<<----------- YOU MAY CHANGE THIS TEXT ---------------- *@
				</div>
			</div>
			<div class="row">
				@* REQUIRED - DO NOT DELETE/CHANGE *@
				@* ----------------- AREA YOU MAY CHANGE -------------------- *@
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					<div class="form-horizontal">
						<h4>Please enter your information</h4>
						<hr />
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						<div class="form-group">
							@Html.LabelFor(model => model.Volunteer_first, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Volunteer_first, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.Volunteer_first, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Volunteer_last, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Volunteer_last, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.Volunteer_last, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Volunteer_phone, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Volunteer_phone, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.Volunteer_phone, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Volunteer_email, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Volunteer_email, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.Volunteer_email, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Volunteer_comment, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextAreaFor(model => model.Volunteer_comment, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.Volunteer_comment, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-offset-2 col-md-10">
								<input type="submit" value="Submit" class="btn btn-default" />
							</div>
						</div>
					</div>
				}
@* ---------------- AREA YOU MAY CHANGE /END ---------------- *@
			</div>
		</main>
	</div>
</div>