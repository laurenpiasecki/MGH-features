@model IEnumerable<Feature1.Models.Volunteer>

@{
	ViewBag.Title = "Index";
}
<html>
<body>
	<h2>List of Volunteers</h2>

	<p>
		@Html.ActionLink("Create New", "Create")
	</p>
	<table class="table">
		<tr>
			<th>
				<b>First Name</b>
			</th>
			<th>
				<b>Last Name</b>
			</th>
			<th>
				<b>Phone Number</b>
			</th>
			<th>
				<b>Email Address</b>
			</th>
			<th>
				<b>Additional Comments</b>
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Volunteer_first)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Volunteer_last)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Volunteer_phone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Volunteer_email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Volunteer_comment)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })
				</td>
			</tr>
		}

	</table>
	</body>
	</html>