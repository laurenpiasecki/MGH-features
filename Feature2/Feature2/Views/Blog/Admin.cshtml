@model IEnumerable<Feature2.Models.Blog>

@{
	ViewBag.Title = "Admin";
}
@* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
<main class="secondary-main">
	<div class="row">
		<div class="col-md-2 container-fluid">

			<!-- Slideout Button -->
			<button class="slideout_btn" type="button">
				<div class="show-more">
					<img src="~/Images/show-more.png" alt="Show More" />
				</div>
			</button>

			<!-- Slideout Aside - Shows in Mobile -->
			<div class="slideout">
				@Html.Partial("_Aside")
			</div>

			<!-- Static Aside - Hides in Mobile-->
			<div class="aside-hide">
				@Html.Partial("_Aside")
			</div>
		</div>


		<div class="col-md-10 col-sm-12 col-xs-12 page-row">
			<div class="container">

				@* PAGE TITLE - YOU MAY CHANGE THE TEXT OF PAGE TITLE *@
				<br />
				<h2 class="page-title">Blog Posts</h2>
				@* ------------------------- TO HERE ------------------------- *@
				<p>
					@Html.ActionLink("Create New", "Create")
				</p>
				<table class="table">
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Blog_title)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Blog_author)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Blog_date)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Blog_title)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Blog_author)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Blog_date)
							</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
								@Html.ActionLink("Details", "Details", new { id = item.Id }) |
								@Html.ActionLink("Delete", "Delete", new { id = item.Id })
							</td>
						</tr>
					}

				</table>
				@* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
			</div> <!-- End of Page Container -->
	</div> <!-- End of Page Column -->
</div> <!-- End of Row -->
</main> <!-- End of Main -->
@* ------------------------- TO HERE ------------------------- *@
