@model Feature2.Models.Blog

@{
	ViewBag.Title = "Delete";
}
@* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
<main class="secondary-main">
	<div class="row">
		<div class="col-md-2 container-fluid">

			<!-- Slideout Button -->
			<button class="slideout_btn" type="button">
				<div class="show-more">
					<img src="~/Images/show-more.png" alt="Show More" />
				</div>
			</button>

			<!-- Slideout Aside - Shows in Mobile -->
			<div class="slideout">
				@Html.Partial("_Aside")
			</div>

			<!-- Static Aside - Hides in Mobile-->
			<div class="aside-hide">
				@Html.Partial("_Aside")
			</div>
		</div>


		<div class="col-md-10 col-sm-12 col-xs-12 page-row">
			<div class="container">

				@* PAGE TITLE - YOU MAY CHANGE THE TEXT OF PAGE TITLE *@
				<br />
				<h2 class="page-title">Delete blog post:</h2>
				@* ------------------------- TO HERE ------------------------- *@
				<h3>Are you sure you want to delete this?</h3>
				<div>
					<hr />
					<dl class="dl-horizontal">
						<dt>
							@Html.DisplayNameFor(model => model.Blog_title):
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Blog_title)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.Blog_author):
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Blog_author)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.Blog_date):
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Blog_date)
						</dd>

						<dt>
							@Html.DisplayNameFor(model => model.Blog_post):
						</dt>

						<dd>
							@Html.DisplayFor(model => model.Blog_post)
						</dd>

					</dl>

					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()

						<div class="form-actions">
							<input type="submit" value="Delete" class="btn btn-default" />
						</div>
						<br />
						<br />
							@Html.ActionLink("Back to List", "Admin")

					}
				</div>
				@* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
			</div> <!-- End of Page Container -->
		</div> <!-- End of Page Column -->
	</div> <!-- End of Row -->
</main> <!-- End of Main -->
