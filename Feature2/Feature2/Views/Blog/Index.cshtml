@model IEnumerable<Feature2.Models.Blog>

@{
	ViewBag.Title = "Blog";
}
@* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
<main class="secondary-main">
	<div class="row">
		<div class="col-md-2 container-fluid">

			<!-- Slideout Button -->
			<button class="slideout_btn" type="button">
				<div class="show-more">
					<img src="~/Images/show-more.png" alt="Show More" />
				</div>
			</button>

			<!-- Slideout Aside - Shows in Mobile -->
			<div class="slideout">
				@Html.Partial("_Aside")
			</div>

			<!-- Static Aside - Hides in Mobile-->
			<div class="aside-hide">
				@Html.Partial("_Aside")
			</div>
		</div>


		<div class="col-md-10 col-sm-12 col-xs-12 page-row">
			<div class="container">

				@* PAGE TITLE - YOU MAY CHANGE THE TEXT OF PAGE TITLE *@
			<br />
				<h2 class="page-title">Six Pines General Hospital Blog</h2>
				@* ------------------------- TO HERE ------------------------- *@
			<br />
				<div class="blog">
					@foreach (var item in Model)
					{
						<h3>
							@Html.DisplayFor(modelItem => item.Blog_title)
						</h3>
						<div>
							<b>@Html.DisplayFor(modelItem => item.Blog_date)</b> -
							@Html.DisplayFor(modelItem => item.Blog_author)

						</div>
						<br />
						<div class="post">
							@Html.DisplayFor(modelItem => item.Blog_post)
						</div>
					}
				</div>
				<br />
				<nav aria-label="Page navigation">
					<ul class="pagination">
						<li>
							<a href="#" aria-label="Previous">
								<span aria-hidden="true">&laquo;</span>
							</a>
						</li>
						<li><a href="#">1</a></li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li>
							<a href="#" aria-label="Next">
								<span aria-hidden="true">&raquo;</span>
							</a>
						</li>
					</ul>
				</nav>

				@* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
			</div> <!-- End of Page Container -->
		</div> <!-- End of Page Column -->
	</div> <!-- End of Row -->
</main> <!-- End of Main -->
@* ------------------------- TO HERE ------------------------- *@