@model Feature3.Models.Calendar

@{
	ViewBag.Title = "Create";
}
@* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
<main class="secondary-main">
	<div class="row">
		<div class="col-md-2 container-fluid">

			<!-- Slideout Button -->
			<button class="slideout_btn" type="button">
				<div class="show-more">
					<img src="~/Images/show-more.png" alt="Show More" />
				</div>
			</button>

			<!-- Slideout Aside - Shows in Mobile -->
			<div class="slideout">
				@Html.Partial("_Aside")
			</div>

			<!-- Static Aside - Hides in Mobile-->
			<div class="aside-hide">
				@Html.Partial("_Aside")
			</div>
		</div>


		<div class="col-md-10 col-sm-12 col-xs-12 page-row">
			<div class="container">

				@* PAGE TITLE - YOU MAY CHANGE THE TEXT OF PAGE TITLE *@
				<h2 class="page-title">Create an event:</h2>
				@* ------------------------- TO HERE ------------------------- *@

				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()

					<div class="form-horizontal">
						<h4>Calendar</h4>
						<hr />
						@Html.ValidationSummary(true, "", new { @class = "text-danger" })
						<div class="form-group">
							@Html.LabelFor(model => model.Event_name, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Event_name,  new { @class = "form-control", placeholder = "Enter event name" })
								@Html.ValidationMessageFor(model => model.Event_name, "", new { @class = "text-danger", @style = "color: red" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Event_date, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Event_date, new { @class = "form-control", placeholder = "Enter event date", type = "date" })
								@Html.ValidationMessageFor(model => model.Event_date, "", new { @class = "text-danger", @style = "color: red" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Event_time, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Event_time, new { @class = "form-control", placeholder = "Enter event time", type = "time" })
								@Html.ValidationMessageFor(model => model.Event_time, "", new { @class = "text-danger", @style = "color: red" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Event_location, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextBoxFor(model => model.Event_location, new { @class = "form-control", placeholder = "Enter event location" })
								@Html.ValidationMessageFor(model => model.Event_location, "", new { @class = "text-danger", @style = "color: red" })
							</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(model => model.Event_desc, htmlAttributes: new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.TextAreaFor(model => model.Event_desc, new { @class = "form-control", placeholder = "Enter event description" })
								@Html.ValidationMessageFor(model => model.Event_desc, "", new { @class = "text-danger", @style = "color: red" })
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-offset-2 col-md-10">
								<div class="form-actions">
									<input type="submit" value="Create" class="btn btn-default" />
								</div>
							</div>
						</div>
					</div>
				}

				<div>
					@Html.ActionLink("Back to List", "Admin")
				</div>
				@* -------- PLEASE DO NOT CHANGE ANYTHING FROM HERE... -------- *@
			</div> <!-- End of Page Container -->
		</div> <!-- End of Page Column -->
	</div> <!-- End of Row -->
</main> <!-- End of Main -->
@* ------------------------- TO HERE ------------------------- *@
